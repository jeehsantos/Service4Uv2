@model AppCore.Models.Employees
@{
    ViewData["Title"] = "Detail user";
}

<h1 class="text-center">Service4U Employees</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>User Detail</strong></h3>
            </div>
            <div class="card-body">
               <ul class="list-group">
                   <li class="list-group-item"><strong>Id: </strong>@Html.DisplayFor(m => m.Id)</li>
                    <li class="list-group-item"><strong>Name: </strong>@Html.DisplayFor(m => m.Name)</li>
                    <li class="list-group-item"><strong>Surname: </strong>@Html.DisplayFor(m => m.Surname)</li>
                    <li class="list-group-item"><strong>Phone: </strong>@Html.DisplayFor(m => m.Phone)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Nationality: </strong>@Html.DisplayFor(m => m.Nationality)</li>
                    <li class="list-group-item"><strong>About: </strong>@Html.DisplayFor(m => m.About)</li>
                    <li class="list-group-item"><strong>Suburb: </strong>@Html.DisplayFor(m => m.Suburb)</li>
                    <li class="list-group-item"><strong>Available: </strong>@Html.DisplayFor(m => m.Available)</li>

               </ul>
                <a asp-controller="Home" asp-action="Index">Return</a>
            </div>
        </div>
    </div>
</div>


