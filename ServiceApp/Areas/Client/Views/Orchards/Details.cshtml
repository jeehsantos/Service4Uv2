@model ServiceApp.Models.Contractor

@{
    ViewData["Title"] = "Service4U";
}

<br />
<br />

<h3 class="text-center">Contractor details</h3>
<form method="POST">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ContractorID" hidden class="form-control" />
        
        <input asp-for="City" hidden class="form-control" />
        <input asp-for="Suburb" hidden class="form-control" />
        <input asp-for="JobType" hidden class="form-control" />
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Name"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" disabled  class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Phone"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Phone" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="City"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="City" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Suburb"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Suburb" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="JobType"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="JobType" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Email"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" disabled class="form-control" />
                </div>
            </div>

            <fieldset class="form-group">
                <legend class="mt-4"><label></label></legend>
                <div class="form-check">

                    <input asp-for="SSEEmployer" disabled class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="SSEEmployer"></label>
                </div>
                 
            </fieldset>

            <div class="form-group  row">
                 
                <div class="col">
                    <a asp-action="Index" class="btn btn-success my-2 my-sm-0 form-control">Return</a>
                </div>
            </div>
        </div>
    </div>



</form>