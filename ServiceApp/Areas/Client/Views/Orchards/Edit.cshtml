@model ServiceApp.Models.Contractor

@{
    ViewData["Title"] = "Service4U";
}

<br />
<br />

<h3 class="text-center">My Profile</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ContractorID" hidden class="form-control" />
       @*  <input asp-for="City" hidden class="form-control" /> *@
        <input asp-for="Suburb" hidden class="form-control" />
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Name"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Phone"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input type="number" asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Email"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="JobType"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="JobType" class="form-control" />
                    <span asp-validation-for="JobType" class="text-danger"></span>
                </div>
            </div>

            <fieldset class="form-group">
                <legend class="mt-4"><label ></label></legend>
                <div class="form-check">
                    
                    <input asp-for="SSEEmployer" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="SSEEmployer"></label>
                    <span asp-validation-for="SSEEmployer" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" disabled asp-for="Active" type="checkbox">
                    <label class="form-check-label" asp-for="Active"></label>
                    <span asp-validation-for="Active" class="form-check-label"></span>
                </div>
            </fieldset>
            
            <div class="form-group  row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.ContractorID"> Update</button>
                </div>
                <div class="col">
                    <a asp-area="Client" asp-controller="Home" asp-action="Index" class="btn btn-success form-control">Return</a>
                </div>
            </div>
        </div>
    </div>



</form>