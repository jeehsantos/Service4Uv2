@model ServiceApp.Models.Employee

@{
    ViewData["Title"] = "Service4U";
}

<br />
<br />

<h3 class="text-center">Edit Employee</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="EmployeeID" hidden class="form-control" />
        <input asp-for="About" hidden class="form-control" />
        <input asp-for="DateOfBirth" hidden class="form-control" />
        <input asp-for="Phone" hidden class="form-control" />
        <input asp-for="Email" hidden class="form-control" />
        <input asp-for="Image" hidden class="form-control" />

        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Name"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="col-4">
                <label class="col-4">
                    <label asp-for="Language"></label>
                </label>
            </div>
            <div class="col-8">
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
        </div>

        <div class="col-4">
            <label class="col-4">
                <label asp-for="Suburb"></label>
            </label>
        </div>
        <div class="col-8">
            <input asp-for="Suburb" class="form-control" />
            <span asp-validation-for="Suburb" class="text-danger"></span>
        </div>
    </div>

            <fieldset class="form-group">
                <legend class="mt-4"><label></label></legend>
                <div class="form-check">

                    <input asp-for="Available" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="Available"></label>
                    <span asp-validation-for="Available" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" asp-for="Active" type="checkbox">
                    <label class="form-check-label" asp-for="Active"></label>
                    <span asp-validation-for="Active" class="form-check-label"></span>
                </div>
            </fieldset>

            <div class="form-group  row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.EmployeeID"> Update</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Return</a>
                </div>
            </div>
       



</form>