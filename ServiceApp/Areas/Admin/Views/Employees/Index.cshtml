
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Employees list</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>  New Employee</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblEmployees" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Name</th>
                <th>Suburb</th>
                <th>Language</th>
                <th>Review</th>
                <th>Active</th>
                <th>Actions:</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/employees.js"></script>
