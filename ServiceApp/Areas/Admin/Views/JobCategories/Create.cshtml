@model ServiceApp.Models.JobCategory

@{
    ViewData["Title"] = "Service4U";
}

<br />
<br />

<h3 class="text-center">New Category</h3>
<form method="POST" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="CategoryName"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="CategoryType"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryType" class="form-control" />
                    <span asp-validation-for="CategoryType" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8">
                    <partial name="_ViewCreateReturn" />
                </div>
            </div>
        </div>
    </div>



</form>