@model ServiceApp.Models.JobCategory

@{
    ViewData["Title"] = "Service4U";
}

<br />
<br />

<h3 class="text-center">Edit Category</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="JobCategoryID" hidden class="form-control" />
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="CategoryName"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="CategoryType"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryType" class="form-control" />
                    <span asp-validation-for="CategoryType" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.JobCategoryID"> Update</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Return</a>
                </div>
            </div>
        </div>
    </div>



</form>