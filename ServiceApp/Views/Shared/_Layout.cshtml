                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Client" asp-controller="Orchards" asp-action="Edit">My Profile</a>

                            </li>
                        }
                        else if(User.IsInRole(Constants.Employee)){

                            <li class="nav-item">
                                <a class="navbar-brand text-white" asp-area="Client" asp-controller="Home" asp-action="Index">  Service4U</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Client" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Client" asp-controller="Home" asp-action="Index"> Home</a>
