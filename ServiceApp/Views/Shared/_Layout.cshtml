                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Client" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Admin" asp-controller="Articles" asp-action="Index">Articles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Admin" asp-controller="Categories" asp-action="Index">Articles Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Client" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="navbar-brand text-white" asp-area="Client" asp-controller="Home" asp-action="Index">  Service4U</a>
